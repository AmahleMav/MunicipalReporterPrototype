<Window x:Class="MunicipalReporterPrototype.ReportIssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalReporterPrototype"
        mc:Ignorable="d"
        Title="Report an Issue" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Report an Issue"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Location:"/>
            <TextBox x:Name="txtLocation" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Category:"/>
            <ComboBox x:Name="cmbCategory" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Sanitation"/>
                <ComboBoxItem Content="Roads"/>
                <ComboBoxItem Content="Utilities"/>
                <ComboBoxItem Content="Electricity"/>
                <ComboBoxItem Content="Water"/>
            </ComboBox>

            <TextBlock Text="Description:"/>
            <RichTextBox x:Name="rtbDescription" Height="100" Margin="0,0,0,10"/>

            <Button x:Name="btnAttachFile"
                    Content="Attach Image/Document"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="btnAttachFile_Click"/>
            <TextBlock x:Name="lblAttachment"
                       Text="No file attached"
                       FontStyle="Italic"
                       Margin="0,0,0,10"/>

            <!-- Progress feature -->
            <TextBlock Text="Progress:"/>
            <ProgressBar x:Name="progressReport"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="btnSubmit" Content="Submit"
                    Width="100" Height="35"
                    Margin="10,0" Click="btnSubmit_Click"/>
            <Button x:Name="btnBack" Content="Back to Main Menu"
                    Width="150" Height="35"
                    Margin="10,0" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
