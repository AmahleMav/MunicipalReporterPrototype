<Window x:Class="MunicipalReporterPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Services Application"
        Height="500" Width="850"
        Background="#f7f9fb"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Card Container -->
        <Border Background="White" 
                CornerRadius="15" 
                Padding="40"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Municipal Services" 
                           FontSize="26" FontWeight="Bold"
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <Button x:Name="btnReportIssue" 
                        Content=" Report an Issue" 
                        Height="45" 
                        Margin="0,0,0,12"
                        Background="#3498db"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#2980b9"
                        BorderThickness="1"
                        Click="btnReportIssue_Click"/>

                <Button x:Name="BtnEvents" 
                        Content=" Local Events &amp; Announcements" 
                        Height="45" 
                        Margin="0,0,0,12"
                        Background="#2ecc71"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#27ae60"
                        BorderThickness="1"
                        Click="BtnEvents_Click"/>

                <Button x:Name="btnStatus" 
                        Content=" Service Request Status" 
                        Height="45" 
                        Margin="0,0,0,12"
                        Background="#bdc3c7"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#95a5a6"
                        BorderThickness="1"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- Floating ChatBot Button -->
        <Button x:Name="btnChatBot"
                Width="45" Height="45"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,25,25"
                Background="#3498db"
                Foreground="White"
                FontSize="26"
                FontWeight="Bold"
                Content="💬"
                ToolTip="Ask HelpBot"
                Click="btnChatBot_Click"
                BorderBrush="#2980b9"
                BorderThickness="2"
                Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.4"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
