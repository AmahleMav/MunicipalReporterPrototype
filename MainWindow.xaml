<Window x:Class="MunicipalReporterPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Services Application" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#f2f2f2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Municipal Services" 
               FontSize="24" 
               FontWeight="Bold" 
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

            <Button x:Name="btnReportIssue" Content="Report Issues" Height="40" Margin="0,0,0,10" Click="btnReportIssue_Click"/>
            <Button x:Name="btnEvents" Content="Local Events &amp; Announcements" Height="40" Margin="0,0,0,10" IsEnabled="False"/>
            <Button x:Name="btnStatus" Content="Service Request Status" Height="40" Margin="0,0,0,10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
