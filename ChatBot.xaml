<Window x:Class="MunicipalReporterPrototype.ChatBot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HelpBot Assistant"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat area -->
        <ScrollViewer x:Name="ChatScroll" VerticalScrollBarVisibility="Auto" Grid.Row="0" Background="White" Margin="0,0,0,10">
            <StackPanel x:Name="ChatPanel" Margin="5"/>
        </ScrollViewer>

        <!-- Input area -->
        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Text input placeholder -->
            <Grid>
                <TextBox x:Name="txtUserInput"
                         Height="35"
                         FontSize="14"
                         Padding="8"
                         VerticalContentAlignment="Center"
                         TextChanged="txtUserInput_TextChanged"/>
                <TextBlock x:Name="PlaceholderText"
                           Text="Type your message..."
                           Foreground="#999"
                           FontStyle="Italic"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Send Button -->
            <Button Content="Send"
                    Grid.Column="1"
                    Width="80"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#3498db"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Send_Click"/>
        </Grid>
    </Grid>
</Window>
