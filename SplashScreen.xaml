<Window x:Class="MunicipalReporterPrototype.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Municipal Reporter"
        Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="15" Background="White" Padding="20" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,0,40,0">
                <TextBlock Text="Municipal Reporter"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,10"/>

                <!-- Animated Loading Text -->
                <TextBlock x:Name="LoadingText"
                           Text="Loading"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#3498db"
                           Margin="0,0,0,0" />

                <!-- Simple Progress Bar -->
                <ProgressBar Width="307"
                             Height="5"
                             Margin="0,10,0,0"
                             Foreground="#3498db"
                             Background="#ddd"
                             IsIndeterminate="True"/>
            </StackPanel>

            <Image Grid.Column="1"
               Width="192" Height="195"
               Source="/MunicipalReporterPrototype;component/Images/city.jpg"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        </Grid>
    </Border>
</Window>
