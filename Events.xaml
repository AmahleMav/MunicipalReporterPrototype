<Window x:Class="MunicipalReporterPrototype.Events"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Local Events &amp; Announcements"
        Height="650" Width="1000"
        Background="#f7f9fb"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Local Events &amp; Announcements"
                   FontSize="26" FontWeight="Bold"
                   Foreground="#2c3e50"
                   Margin="0,0,0,15"/>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,15" 
                BorderBrush="#dfe6e9" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CategoryBox" Width="150" Margin="0,0,20,0"/>
                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="FromDate" Width="130" Margin="0,0,20,0"/>
                <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="ToDate" Width="130" Margin="0,0,20,0"/>
                <Button x:Name="SearchBtn" Content="Search" Width="90" Margin="0,0,10,0"
                        Background="#3498db" Foreground="White" BorderBrush="#2980b9"
                        Click="SearchBtn_Click"/>
                <Button x:Name="SortBtn" Content="Sort by Date" Width="110"
                        Background="#2ecc71" Foreground="White" BorderBrush="#27ae60"
                        Click="SortBtn_Click"/>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" BorderBrush="#dfe6e9" BorderThickness="1">
            <DataGrid x:Name="EventGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      Background="White"
                      IsReadOnly="True"
                      MouseDoubleClick="EventGrid_MouseDoubleClick"
                      GridLinesVisibility="None"
                      RowBackground="#f9f9f9"
                      AlternatingRowBackground="#f2f2f2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="1*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="1*"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="1.5*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
            <Button Content="View Recommendations" Click="RecommendBtn_Click" Width="180" Height="35" Margin="0,0,10,0"
                    Background="#9b59b6" Foreground="White" BorderBrush="#8e44ad"/>
            <Button Content="Process Notification" Click="ProcessBtn_Click" Width="170" Height="35" Margin="0,0,10,0"
                    Background="#f39c12" Foreground="White" BorderBrush="#e67e22"/>
            <Button Content="⬅ Back to Menu" Click="BackBtn_Click" Width="130" Height="35"
                    Background="#95a5a6" Foreground="White" BorderBrush="#7f8c8d"/>
        </StackPanel>
    </Grid>
</Window>
